<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        <!-- General CSS Files -->
        <link rel="stylesheet" href="{{asset('build/assets/css/app.min.css')}}">
        <!-- Template CSS -->
        <link rel="stylesheet" href="{{asset('build/assets/css/style.css')}}">
        <link rel="stylesheet" href="{{asset('build/assets/css/styleHome.css')}}">
        <link rel="stylesheet" href="{{asset('build/assets/css/components.css')}}">
        <!-- Custom style CSS -->
        <link rel="stylesheet" href="{{asset('build/assets/css/custom.css')}}">
        <link rel='shortcut icon' type='image/x-icon' href="{{asset('build/assets/img/logo.png')}}" />
        
        <link rel="stylesheet" href="{{asset('build/assets/bundles/pretty-checkbox/pretty-checkbox.min.css')}}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body style="background-color: #F0F2F5 !important;">
        {% block body %}{% endblock %}

        
        <!-- General JS Scripts -->
        <script src="{{asset('build/assets/js/app.min.js')}}"></script>
        <!-- JS Libraies -->
        <script src="{{asset('build/assets/bundles/apexcharts/apexcharts.min.js')}}"></script>
        <!-- Page Specific JS File -->
        <script src="{{asset('build/assets/js/page/index.js')}}"></script>
        <!-- Template JS File -->
        <script src="{{asset('build/assets/js/scripts.js')}}"></script>
        <!-- Custom JS File -->
        <script src="{{asset('build/assets/js/custom.js')}}"></script>
    </body>
</html>
