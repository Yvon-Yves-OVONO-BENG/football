{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}

{% block body %}
<!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-body">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4><i class="fas fa-user-friends"></i> Team players from : <span class="badge badge-secondary">{{ team.name }}</span></h4>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-striped" id="table-1">
                        <thead>
                          <tr>
                            <th class="text-center">
                              NÂ°
                            </th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Surname</th>
                            <th class="text-center">Action</th>
                          </tr>
                        </thead>

                        <tbody>
                            {% set i = 1 %}
                            {% for player in players %}
                                
                                <tr>
                                    <td class="text-center">
                                        {{ i }}
                                    </td>
                                    <td>
                                        {{ player.name }}
                                    </td>
                                    <td class="align-middle">
                                        {{ player.surname }}
                                    </td>
                                    
                                    <td class="text-center">
                                        {% if player.forSale %}
                                            <a href="{{ path('cancel_for_sale', {'id': player.id }) }}" class="btn btn-outline-danger"> <i class="fas fa-times"></i> Cancel For sale</a>
                                            {% else %}
                                                <a href="{{ path('for_sale', {'id': player.id }) }}" class="btn btn-outline-info"> <i class="fas fa-money-bill-alt"></i> For sale</a>
                                        {% endif %}
                                            

                                        <a href="javascript:void(0)" class="btn btn-primary"> <i class="far fa-edit"></i> Edit</a>
                                        <a href="javascript:void(0)" class="btn btn-danger"> <i class="far fa-trash-alt"></i> Delete</a>
                                    </td>
                                </tr>
                                {% set i = i + 1 %}
                            {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
{% endblock %}
