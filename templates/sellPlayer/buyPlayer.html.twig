{% extends 'base.html.twig' %}

{% block title %}Buy player{% endblock %}

{% block body %}
<div class="main-content">
        <section class="section">
          <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4> 
                                Buy player : <span class="badge badge-secondary">{{ player.name }} {{ player.surname }}</span> 
                            </h4>
                        </div>
                        {{ form_start(formSellBuy, {'attr': {'class': 'needs-validation'}}) }}
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-2 col-md-2 col-lg-2">
                                        
                                    </div>
                                    <div class="col-8 col-md-8 col-lg-8">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">From</label>
                                            <div class="col-sm-9">
                                                <input type="text" name="teamOfPlayer.name" value="{{ teamOfPlayer.name }}" class="form-control" required="" disabled>
                                                <div class="invalid-feedback">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">To</label>
                                            <div class="col-sm-9">
                                                <select name="idTeamTo" class="form-control select2" required>
                                                    <option value="">Team</option>
                                                    {% for team in teams %}
                                                        <option value="{{ team.id }}">{{ team.name }}</option>
                                                    {% endfor %}
                                                    
                                                </select>
                                            </div>
                                            <div class="invalid-feedback">
                                                What's team ?
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Amount</label>
                                            <div class="col-sm-9">
                                                <input type="text" name="amountForSale" value="{{ amountForSale }}" class="form-control" required="" >
                                                <div class="valid-feedback">
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2 col-md-2 col-lg-2">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button class="btn btn-primary" type="submit">
                                        Submit
                                </button>
                            </div>
                        {{ form_end(formSellBuy) }}
                    </div>
                </div>
            </div>
          </div>
        </section>
    </div>
{% endblock %}
